.list_content .goods_item {
  display: flex;
}
.list_content .goods_item .img_container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.list_content .goods_item .img_container image {
  width: 60%;
}
.list_content .goods_item .goods_info {
  flex: 2;
  padding: 20rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.list_content .goods_item .goods_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  white-space: normal !important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list_content .goods_item .goods_info .goods_price {
  font-size: 32rpx;
  color: var(--themeColor);
}
